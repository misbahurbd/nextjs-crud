generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  Pending
  Complete
}

model Todo {
  id          String     @id @default(uuid()) @map("_id")
  title       String
  description String?
  status      TodoStatus @default(Pending)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
